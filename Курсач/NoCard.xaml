        <Label Content="Выберите сумму:" HorizontalAlignment="Left" Margin="36,182,0,0" VerticalAlignment="Top" Height="26" Width="106"/>
        <Label Content="Выберите банк:" HorizontalAlignment="Left" Margin="36,109,0,0" VerticalAlignment="Top" Height="26" Width="106"/>
        <Label Content="Оператор" HorizontalAlignment="Left" Margin="36,140,0,0" VerticalAlignment="Top" Height="27" Width="118" RenderTransformOrigin="0.492,-0.852"/>
        <ComboBox x:Name="OperCB" HorizontalAlignment="Left" Margin="167,145,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="BankCB" HorizontalAlignment="Left" Margin="167,113,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>

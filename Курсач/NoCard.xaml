        xmlns:local="clr-namespace:Курсач"
        mc:Ignorable="d"
        Title="NoCard" Height="324.5" Width="593">
    <Grid Margin="0,0,-8,-2" Height="295" VerticalAlignment="Top">
        <TextBox HorizontalAlignment="Left" Height="50" Margin="120,15,0,0" TextWrapping="Wrap" Text="  Оплата мобильной связи" VerticalAlignment="Top" Width="319" FontSize="22"/>
        <Slider x:Name="summSL" HorizontalAlignment="Left" Margin="147,182,0,0" VerticalAlignment="Top" Height="38" Width="144" Maximum="10000" SmallChange="100"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="120,251,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <DataGrid x:Name="OplataMob" HorizontalAlignment="Left" Height="179" Margin="310,70,0,0" VerticalAlignment="Top" Width="211"/>
        <TextBox x:Name="phoneTB" HorizontalAlignment="Left" Height="22" Margin="167,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>

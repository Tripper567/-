        <Label Content="Оплата услуг" HorizontalAlignment="Left" Margin="300,27,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="156,400,0,0" VerticalAlignment="Top" Width="96" Height="51" Click="Button_Click"/>

